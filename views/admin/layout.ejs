<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title + ' - ' : '' %>Admin Panel - Bright Smile Dental</title>
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="admin-header">
        <div class="container">
            <div style="display: flex; justify-content: space-between; align-items: center;">
                <div class="logo">
                    ðŸ¦· Bright Smile Dental - Admin Panel
                </div>
                <div>
                    <a href="/" style="color: rgba(255, 255, 255, 0.8); margin-right: 1rem;">View Site</a>
                    <a href="/admin/logout" style="color: rgba(255, 255, 255, 0.8);">Logout</a>
                </div>
            </div>
            <nav class="admin-nav">
                <a href="/admin" class="<%= currentPage === 'dashboard' ? 'active' : '' %>">Dashboard</a>
                <a href="/admin/services" class="<%= currentPage === 'services' ? 'active' : '' %>">Services</a>
                <a href="/admin/team" class="<%= currentPage === 'team' ? 'active' : '' %>">Team</a>
                <a href="/admin/practice" class="<%= currentPage === 'practice' ? 'active' : '' %>">Practice Info</a>
                <a href="/admin/appointments" class="<%= currentPage === 'appointments' ? 'active' : '' %>">Appointments</a>
            </nav>
        </div>
    </header>

    <main class="admin-content">
        <div class="container">
            <%- body %>
        </div>
    </main>

    <script>
        // Confirm delete actions
        document.querySelectorAll('form[action*="delete"]').forEach(form => {
            form.addEventListener('submit', function(e) {
                if (!confirm('Are you sure you want to delete this item? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });
        });

        // Auto-resize textareas
        document.querySelectorAll('textarea').forEach(textarea => {
            function autoResize() {
                textarea.style.height = 'auto';
                textarea.style.height = textarea.scrollHeight + 'px';
            }
            
            textarea.addEventListener('input', autoResize);
            autoResize(); // Initial resize
        });
    </script>
</body>
</html>