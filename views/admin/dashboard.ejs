<%- include('layout', { title: 'Dashboard' }) %>

<div style="margin-bottom: 2rem;">
    <h1>Dashboard</h1>
    <p style="color: var(--gray-600);">Welcome to your dental practice content management system.</p>
</div>

<!-- Statistics -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-number"><%= appointmentCount %></div>
        <div class="stat-label">Pending Appointments</div>
    </div>
    <div class="stat-card">
        <div class="stat-number"><%= serviceCount %></div>
        <div class="stat-label">Services Listed</div>
    </div>
    <div class="stat-card">
        <div class="stat-number"><%= teamCount %></div>
        <div class="stat-label">Team Members</div>
    </div>
    <div class="stat-card">
        <div class="stat-number">100%</div>
        <div class="stat-label">System Health</div>
    </div>
</div>

<!-- Quick Actions -->
<div class="grid grid-2">
    <div class="card">
        <div class="card-content">
            <h3>📋 Quick Actions</h3>
            <div style="display: flex; flex-direction: column; gap: 1rem; margin-top: 1.5rem;">
                <a href="/admin/services/add" class="btn btn-primary">Add New Service</a>
                <a href="/admin/team/add" class="btn btn-secondary">Add Team Member</a>
                <a href="/admin/appointments" class="btn btn-accent">View Appointments</a>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-content">
            <h3>🎯 Management</h3>
            <ul style="list-style: none; padding: 0; margin-top: 1.5rem;">
                <li style="margin-bottom: 1rem;">
                    <a href="/admin/services" style="display: flex; align-items: center; padding: 0.5rem; border-radius: 0.25rem; transition: background-color 0.2s;">
                        <span style="margin-right: 0.5rem;">🦷</span>
                        Manage Services
                    </a>
                </li>
                <li style="margin-bottom: 1rem;">
                    <a href="/admin/team" style="display: flex; align-items: center; padding: 0.5rem; border-radius: 0.25rem; transition: background-color 0.2s;">
                        <span style="margin-right: 0.5rem;">👥</span>
                        Manage Team
                    </a>
                </li>
                <li style="margin-bottom: 1rem;">
                    <a href="/admin/practice" style="display: flex; align-items: center; padding: 0.5rem; border-radius: 0.25rem; transition: background-color 0.2s;">
                        <span style="margin-right: 0.5rem;">🏥</span>
                        Practice Information
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>

<!-- System Status -->
<div class="card mt-4">
    <div class="card-content">
        <h3>🔧 System Status</h3>
        <div class="grid grid-3" style="margin-top: 1.5rem;">
            <div style="text-align: center;">
                <div style="color: var(--success-color); font-size: 1.5rem; margin-bottom: 0.5rem;">✅</div>
                <strong>Database</strong>
                <p style="color: var(--gray-600); font-size: 0.875rem;">Connected & Healthy</p>
            </div>
            <div style="text-align: center;">
                <div style="color: var(--success-color); font-size: 1.5rem; margin-bottom: 0.5rem;">✅</div>
                <strong>Website</strong>
                <p style="color: var(--gray-600); font-size: 0.875rem;">Online & Running</p>
            </div>
            <div style="text-align: center;">
                <div style="color: var(--success-color); font-size: 1.5rem; margin-bottom: 0.5rem;">✅</div>
                <strong>File Uploads</strong>
                <p style="color: var(--gray-600); font-size: 0.875rem;">Available</p>
            </div>
        </div>
    </div>
</div>