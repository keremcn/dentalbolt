<%- include('layout', { title: 'Home' }) %>

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <h1>Your Perfect Smile Starts Here</h1>
        <p>Experience exceptional dental care in a comfortable, modern environment. Our expert team is dedicated to helping you achieve optimal oral health.</p>
        <div style="margin-top: 2rem;">
            <a href="/contact" class="btn btn-secondary" style="margin-right: 1rem;">Schedule Appointment</a>
            <a href="/services" class="btn btn-primary">Our Services</a>
        </div>
    </div>
</section>

<!-- Services Preview -->
<section class="section">
    <div class="container">
        <div class="text-center mb-6">
            <h2>Our Services</h2>
            <p style="color: var(--gray-600); max-width: 600px; margin: 0 auto;">We offer comprehensive dental services to meet all your oral health needs, from preventive care to advanced treatments.</p>
        </div>
        
        <div class="grid grid-4">
            <% services.forEach(service => { %>
                <div class="card">
                    <% if (service.image_url) { %>
                        <img src="<%= service.image_url %>" alt="<%= service.title %>" class="card-image">
                    <% } %>
                    <div class="card-content">
                        <h3 class="card-title"><%= service.title %></h3>
                        <p class="card-text"><%= service.description.substring(0, 100) %>...</p>
                        <% if (service.price) { %>
                            <p style="color: var(--primary-color); font-weight: 600;"><%= service.price %></p>
                        <% } %>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <div class="text-center mt-6">
            <a href="/services" class="btn btn-primary">View All Services</a>
        </div>
    </div>
</section>

